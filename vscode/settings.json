{
    //---------------------------------------------------------------------------------------------
    // Color customization for editor (semantic tokens)
    //---------------------------------------------------------------------------------------------
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "[Default Dark+]": {
            "rules": {
                //-----------------------------------------------------------------------
                // General case for all languages
                //-----------------------------------------------------------------------
                "enumMember": {
                    "foreground": "#d4d4d4"
                },
                "macro": {
                    "foreground": "#9cdcfe"
                },
                "property": {
                    "foreground": "#d4d4d4"
                },
                "operator": {
                    "foreground": "#d4d4d4"
                },
                //"operator": {
                //    "foreground": "#ffff80"
                //},
                "regexp": {
                    "foreground": "#a0a0f0"
                },
                "variable": {
                    "foreground": "#d4d4d4"
                },
                "variable.disposable": {
                    "foreground": "#f0e7b0"
                },
                "*.mutable": {
                    "foreground": "#e0c020"
                }
            }
        }
    },
    //---------------------------------------------------------------------------------------------
    // Color customization for editor (syntax tokens)
    //---------------------------------------------------------------------------------------------
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "comments": "#606060",
            "functions": "#d4d4d4",
            "strings": "#c080c0",
            "variables": "#d4d4d4",
            "textMateRules": [
                //-----------------------------------------------------------------------
                // General case for all languages
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "invalid"
                    ],
                    "settings": {
                        "foreground": "#f06868"
                    }
                },
                {
                    "scope": [
                        "keyword",
                        "keyword.control"
                    ],
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for C
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.c meta.preprocessor keyword.control"
                    ],
                    "settings": {
                        "foreground": "#909080"
                    }
                },
                {
                    "scope": [
                        "source.c meta.preprocessor string"
                    ],
                    "settings": {
                        "foreground": "#d7d080"
                    }
                },
                {
                    "scope": [
                        "source.c string.quoted constant.character.escape",
                        "source.c string.quoted constant.other.placeholder"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for C++
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.cpp meta.preprocessor keyword.control"
                    ],
                    "settings": {
                        "foreground": "#909080"
                    }
                },
                {
                    "scope": [
                        "source.cpp meta.preprocessor string"
                    ],
                    "settings": {
                        "foreground": "#d7d080"
                    }
                },
                {
                    "scope": [
                        "source.cpp string.quoted constant.character.escape",
                        "source.cpp string.quoted constant.other.placeholder"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.cpp meta.head.extern string"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                {
                    "scope": [
                        "source.cpp storage.modifier.pointer"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for F#
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.fsharp constant.other"
                    ],
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": [
                        "source.fsharp constant.language.unit",
                        "source.fsharp keyword.symbol"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                //{
                //    "scope": [
                //        "source.fsharp constant.language.unit",
                //        "source.fsharp keyword.symbol"
                //    ],
                //    "settings": {
                //        "foreground": "#ffff80"
                //    }
                //},
                {
                    "scope": [
                        "source.fsharp keyword.control.directive"
                    ],
                    "settings": {
                        "foreground": "#909080"
                    }
                },
                {
                    "scope": [
                        "source.fsharp keyword.symbol.arrow"
                    ],
                    "settings": {
                        "foreground": "#90b8d8"
                    }
                },
                {
                    "scope": [
                        "source.fsharp keyword.symbol.new"
                    ],
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": [
                        "source.fsharp string.quoted constant.character",
                        "source.fsharp string.quoted keyword.format.specifier"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.fsharp markup.bold",
                        "source.fsharp markup.heading",
                        "source.fsharp punctuation.definition.list.begin.markdown"
                    ],
                    "settings": {
                        "foreground": "#909080",
                        "fontStyle": ""
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for Ruby
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.ruby string.quoted punctuation.section.embedded",
                        "source.ruby string.regexp",
                        "source.ruby string.regexp punctuation"
                    ],
                    "settings": {
                        "foreground": "#c080c0"
                    }
                },
                {
                    "scope": [
                        "source.ruby string.quoted constant.character.escape",
                        "source.ruby string.regexp constant.character.escape"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                {
                    "scope": [
                        "source.ruby variable.other.constant"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for JSON
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.json constant.character.escape"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for XML
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "text.xml string.unquoted.cdata"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                {
                    "scope": [
                        "text.xml string.unquoted.cdata punctuation"
                    ],
                    "settings": {
                        "foreground": "#d7d080"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for CSS
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.css entity.name.tag.css",
                        "source.css entity.name.tag.wildcard",
                        "source.css entity.other.attribute-name.class.css",
                        "source.css entity.other.attribute-name.id.css",
                        "source.css entity.other.attribute-name.pseudo-class.css",
                        "source.css entity.other.attribute-name.pseudo-element.css"
                    ],
                    "settings": {
                        "foreground": "#d7d080"
                    }
                },
                {
                    "scope": [
                        "source.css constant.numeric",
                        "source.css constant.numeric keyword.other.unit",
                        "source.css constant.other.color.rgb-value",
                        "source.css support.constant.color",
                        "source.css support.constant.font-name",
                        "source.css support.constant.property-value"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                {
                    "scope": [
                        "source.css variable.scss"
                    ],
                    "settings": {
                        "foreground": "#ce9178"
                    }
                },
                {
                    "scope": [
                        "source.css support.constant.media"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for Markdown
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "text.html.markdown markup.heading",
                        "text.html.markdown punctuation.definition.list.begin.markdown"
                    ],
                    "settings": {
                        "foreground": "#4ec9b0",
                        "fontStyle": ""
                    }
                },
                {
                    "scope": [
                        "text.html.markdown markup.underline.link"
                    ],
                    "settings": {
                        "foreground": "#569cd6",
                        "fontStyle": ""
                    }
                },
                //-----------------------------------------------------------------------
                // Special case for shell scripts
                //-----------------------------------------------------------------------
                {
                    "scope": [
                        "source.shell constant.character.escape"
                    ],
                    "settings": {
                        "foreground": "#a0a0f0"
                    }
                },
                {
                    "scope": [
                        "source.shell constant.numeric",
                        "source.shell constant.other.option",
                        "source.shell entity.name.command",
                        "source.shell string.unquoted"
                    ],
                    "settings": {
                        "foreground": "#d4d4d4"
                    }
                },
                {
                    "scope": [
                        "source.shell entity.name.function"
                    ],
                    "settings": {
                        "foreground": "#4ec9b0"
                    }
                },
                {
                    "scope": [
                        "source.shell support.function"
                    ],
                    "settings": {
                        "foreground": "#569cd6"
                    }
                },
                {
                    "scope": [
                        "source.shell variable.language"
                    ],
                    "settings": {
                        "foreground": "#d7d080"
                    }
                }
            ]
        }
    },
    //---------------------------------------------------------------------------------------------
    // Color customization for workbench
    //---------------------------------------------------------------------------------------------
    "workbench.colorCustomizations": {
        "[Default Dark+]": {
            //---------------------------------------------------------------------------
            // Selection highlights for menus and lists
            //---------------------------------------------------------------------------
            "list.activeSelectionBackground": "#404040",
            "list.focusAndSelectionOutline": "#606060",
            "menu.selectionBackground": "#404040",
            //---------------------------------------------------------------------------
            // Borders around document tabs
            //---------------------------------------------------------------------------
            "editorGroupHeader.border": "#383838",
            "tab.activeBorder": "#1e1e1e",
            "tab.unfocusedActiveBorder": "#1e1e1e",
            //---------------------------------------------------------------------------
            // Explorer tree and document tab text
            //---------------------------------------------------------------------------
            "gitDecoration.addedResourceForeground": "#70c890",
            "gitDecoration.renamedResourceForeground": "#70c890",
            "gitDecoration.untrackedResourceForeground": "#70c890",
            "gitDecoration.deletedResourceForeground": "#f08888",
            "gitDecoration.stageDeletedResourceForeground": "#f08888",
            "gitDecoration.modifiedResourceForeground": "#e7e080",
            "gitDecoration.stageModifiedResourceForeground": "#e7e080",
            "list.errorForeground": "#f08888",
            "list.warningForeground": "#e7e080",
            //---------------------------------------------------------------------------
            // Highlights for matching words and brackets
            //---------------------------------------------------------------------------
            "editor.wordHighlightBackground": "#404040",
            "editor.wordHighlightBorder": "#404040",
            "editorBracketMatch.background": "#404040",
            "editorBracketMatch.border": "#404040",
            //---------------------------------------------------------------------------
            // Highlights for unicode characters
            //---------------------------------------------------------------------------
            "editorUnicodeHighlight.background": "#373700",
            "editorUnicodeHighlight.border": "#373700",
            //---------------------------------------------------------------------------
            // Squigglies and scrollbar markers
            //---------------------------------------------------------------------------
            "editorError.foreground": "#f06868",
            "editorWarning.foreground": "#d7d040",
            "editorOverviewRuler.errorForeground": "#f06868",
            "editorOverviewRuler.warningForeground": "#d7d040",
            //---------------------------------------------------------------------------
            // Gutter indicators and icons
            //---------------------------------------------------------------------------
            "debugIcon.breakpointForeground": "#f86868",
            "editorLightBulb.foreground": "#d7d040",
            "editorGutter.background": "#222222",
            "editorGutter.addedBackground": "#d7d040",
            "editorGutter.deletedBackground": "#d7d040",
            "editorGutter.modifiedBackground": "#d7d040"
        }
    },
    "scm.diffDecorationsGutterPattern": {
        "added": false,
        "modified": false
    },
    //---------------------------------------------------------------------------------------------
    // General settings for editor
    //---------------------------------------------------------------------------------------------
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.codeLens": false,
    "editor.colorDecorators": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.lineNumbers": "off",
    "editor.links": false,
    "editor.matchBrackets": "near",
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.roundedSelection": false,
    //---------------------------------------------------------------------------------------------
    // General settings for workbench
    //---------------------------------------------------------------------------------------------
    "workbench.colorTheme": "Default Dark+",
    "workbench.commandPalette.history": 0,
    "workbench.editor.decorations.colors": false,
    "workbench.editor.openPositioning": "last",
    "workbench.iconTheme": "vs-minimal",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 20,
    //---------------------------------------------------------------------------------------------
    // General settings for terminal
    //---------------------------------------------------------------------------------------------
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontWeightBold": "normal",
    //---------------------------------------------------------------------------------------------
    // Language settings for F#
    //---------------------------------------------------------------------------------------------
    "FSharp.codeLenses.references.enabled": false,
    "FSharp.codeLenses.signature.enabled": false,
    "FSharp.inlayHints.enabled": false,
    "FSharp.inlayHints.parameterNames": false,
    "FSharp.inlayHints.typeAnnotations": false,
    "FSharp.interfaceStubGeneration": false,
    "FSharp.lineLens.enabled": "never",
    "FSharp.pipelineHints.enabled": false,
    //---------------------------------------------------------------------------------------------
    // Font size and line height
    //---------------------------------------------------------------------------------------------
    "editor.fontSize": 12.73,
    "editor.lineHeight": 16,
    "debug.console.fontSize": 12.73,
    "debug.console.lineHeight": 16,
    "terminal.integrated.fontSize": 13,
    //---------------------------------------------------------------------------------------------
    // Other
    //---------------------------------------------------------------------------------------------
    "breadcrumbs.enabled": false,
    "files.insertFinalNewline": true
}
